<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity" android:background="@mipmap/background_red">

    <TextView
            android:text="@string/welcome_to_firebase_push_notification_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/loginHeading" android:fontFamily="@font/gudea"
            android:textSize="20sp" android:textColor="@color/textTabBright" android:textAlignment="center"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="100dp" android:layout_marginLeft="50dp" android:layout_marginRight="50dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:background="@drawable/input_background"
            android:ems="10"
            android:id="@+id/login_email"
            android:layout_below="@+id/loginHeading"
            android:layout_centerHorizontal="true" android:paddingBottom="15dp" android:paddingTop="15dp"
            android:paddingLeft="25dp" android:paddingRight="25dp" android:hint="Email..."
            android:layout_marginLeft="30dp" android:layout_marginRight="30dp" android:layout_marginTop="50dp"
            android:textSize="16sp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/login_password"
            android:background="@drawable/input_background"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/login_email" android:paddingTop="15dp" android:paddingBottom="15dp"
            android:paddingLeft="25dp" android:paddingRight="25dp" android:hint="Password..."
            android:layout_marginLeft="30dp" android:layout_marginRight="30dp" android:layout_marginTop="20dp"
            android:textSize="16sp"/>
    <Button
            android:text="Login to my Account"
            android:layout_width="match_parent"
            android:background="@drawable/input_background"
            android:textAllCaps="true"
            android:layout_height="wrap_content" android:id="@+id/login_btn" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/login_password" android:layout_marginLeft="30dp" android:layout_marginRight="30dp"
            android:layout_marginTop="20dp" android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/gudea_bold"/>
    <Button
            android:text="Need a new Account?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/login_register_btn"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/login_btn" android:layout_alignParentBottom="false"
            android:background="@drawable/border_button"
            android:textAllCaps="false"
            android:layout_marginLeft="30dp" android:layout_marginRight="30dp" android:layout_marginTop="20dp"
            android:fontFamily="@font/gudea_bold" android:textColor="@color/textTabLight"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="invisible"
            android:id="@+id/loginProcess"/>
</RelativeLayout>