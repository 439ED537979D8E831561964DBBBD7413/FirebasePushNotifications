<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp" android:src="@mipmap/round_1" android:id="@+id/user_list_image"
            android:adjustViewBounds="false"/>
    <TextView
            android:text="UserName Loading ..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true"
            android:id="@+id/user_list_name" android:layout_toEndOf="@+id/user_list_image"
            android:fontFamily="@font/gudea_bold" android:textSize="16sp" android:textColor="#000000"
            android:layout_margin="20dp"/>

</RelativeLayout>