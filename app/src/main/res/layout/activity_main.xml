<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@mipmap/background_red">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:id="@+id/tabs_layout">
        <TextView
                android:text="Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/profileLabel" android:layout_weight="1"
                android:fontFamily="@font/gudea" android:textColor="@color/textTabBright" android:textSize="22sp"
                android:padding="15dp"/>
        <TextView
                android:text="All Users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/usersLabel" android:layout_weight="1"
                android:fontFamily="@font/gudea" android:textColor="@color/textTabLight" android:textSize="18sp"
                android:padding="15dp"/>
        <TextView
                android:text="Notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/notificationsLabel" android:layout_weight="1"
                android:fontFamily="@font/gudea" android:textColor="@color/textTabLight" android:textSize="18sp"
                android:padding="15dp"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
            android:id="@+id/mainPager"
            android:layout_height="match_parent"
            android:layout_below="@+id/tabs_layout"
            android:layout_width="match_parent">
    </android.support.v4.view.ViewPager>
</RelativeLayout>