<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity" android:background="@mipmap/background_red">

    <TextView
            android:text="Create a new Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/register_heading" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:layout_marginTop="20dp" android:fontFamily="@font/gudea"
            android:textSize="18sp" android:textColor="@color/textTabBright"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false" android:layout_below="@+id/register_heading"
            android:indeterminate="true"
            android:id="@+id/registerProgressBar" android:visibility="invisible"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="150dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/register_image_btn" android:layout_below="@+id/register_heading"
            android:layout_marginTop="10dp" android:src="@mipmap/round_1"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/input_background"
            android:id="@+id/register_name" android:layout_below="@+id/register_image_btn" android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp" android:layout_marginRight="30dp" android:paddingLeft="25dp"
            android:paddingRight="25dp" android:paddingTop="15dp" android:paddingBottom="15dp" android:hint="Name..."
            android:textSize="16sp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:background="@drawable/input_background"
            android:id="@+id/register_email" android:layout_below="@+id/register_name" android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp" android:layout_marginRight="30dp" android:paddingBottom="15dp"
            android:paddingTop="15dp" android:paddingLeft="25dp" android:paddingRight="25dp" android:hint="Email..."
            android:textSize="16sp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:background="@drawable/input_background"
            android:id="@+id/register_password" android:layout_below="@+id/register_email" android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp" android:layout_marginRight="30dp" android:paddingBottom="15dp"
            android:paddingTop="15dp" android:paddingLeft="25dp" android:paddingRight="25dp"
            android:hint="Password..." android:textSize="16sp"/>
    <Button
            android:text="Create a new Account"
            android:layout_width="match_parent"
            android:background="@drawable/input_background"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content" android:id="@+id/register_btn"
            android:layout_below="@+id/register_password"
            android:layout_marginTop="20dp" android:layout_marginLeft="30dp" android:layout_marginRight="30dp"
            android:fontFamily="@font/gudea_bold"/>
    <Button
            android:text="Back to Login"
            android:layout_width="match_parent"
            android:background="@drawable/border_button"
            android:textAllCaps="false"
            android:textColor="@color/textTabLight"
            android:layout_height="wrap_content" android:id="@+id/register_login_btn"
            android:layout_below="@+id/register_btn"
            android:layout_marginTop="20dp" android:layout_marginRight="30dp" android:layout_marginLeft="30dp"
            android:fontFamily="@font/gudea_bold" android:textSize="14sp"/>
</RelativeLayout>